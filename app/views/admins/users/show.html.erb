<%= turbo_frame_tag "modal_for_user" do  %>
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="modal-title fs-5" id="exampleModalLabel">User Infomation</h1>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Profile Name</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.user_info ? @user.user_info.profile_name : "" %></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Username</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.user_name%></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Email</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.email%></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Status</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.status%></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Type</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.type%></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Phone number</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.phone_number%></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Date of birth</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.user_info ? @user.user_info.date_of_birth : "" %></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Province</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.user_info ? @user.user_info.address : "" %></p>
        </div>
        <hr>
      </div>
      <div class="row mb-4">
        <div class="col-sm-6">
          <p class="text-muted mb-0">Gender</p>
        </div>
        <div class="col-sm-6">
          <p class="mb-0"><%= @user.user_info ? @user.user_info.gender : "" %></p>
        </div>
        <hr>
      </div>
    </div>
  </div>
<% end %>
