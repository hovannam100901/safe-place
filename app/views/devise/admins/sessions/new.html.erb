<div class="container admin_login_form text-center">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <h1 class="form__title">Log in to SafePlace Vietnam for admin</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="card" >
                <div class="card-body login__card-body">
                  <div class="row mb-4 align-items-center">
                    <%= f.label :email, class:"col-3 admin_login_label" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col admin_login_textfield", id:"email" %>
                  </div>
                  <div class="row mb-4 align-items-center">
                    <%= f.label :password, class:"col-3 admin_login_label" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class: "col admin_login_textfield", id: "password" %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class=" form-switch mb-3">
                      <%= f.check_box :remember_me, class: 'form-check-input', id: "flexSwitchCheckChecked" %>
                      <label class="form-check-label fw-medium ml-2" for="flexSwitchCheckChecked">Remember me</label>
                    </div>
                  <% end %>

                </div>
              </div>
              <%= f.submit "Log in", class:"btn admin_button_login", style:"background-color: #1F7564; color: #fff; border: 2px solid #1F7564;"%>
          <% end %>
      </div>
    </div>
    <%= render "devise/admins/shared/links" %>

  </div>
