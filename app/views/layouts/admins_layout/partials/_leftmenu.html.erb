<div class="flex-shrink-0 p-3 bg-white" style="width: 280px;" id="left_menu">
  <a href="/admins/dashboard" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom left_menu_title">
    <h3 style="color: #1F7564">Safe Place</h3>
  </a>
  <ul class="list-unstyled ps-0">
    <li class="mb-1">
      <%= link_to admins_dashboard_path, class: "btn align-items-center rounded collapsed menu_btn_focus" do %>
        <svg class="bi me-2" width="16" height="16">
          <use xlink:href="#home"/>
        </svg>
        Home
      <% end %>
    </li>
    <li class="mb-1">
      <button class="btn align-items-center rounded collapsed menu_btn_focus" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"/></svg>
        Manager
      </button>
      <div class="collapse" id="dashboard-collapse">
        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small lh-lg">
          <li><%= link_to 'Users', admins_users_path, class: 'link-dark rounded' %></li>
          <li><%= link_to 'Counselors', admins_counselors_path, class: 'link-dark rounded' %></li>
          <li><%= link_to 'Podcast Albums', admins_podcast_albums_path, class: 'link-dark rounded' %></li>
          <li><%= link_to 'Rooms', admins_rooms_path, class: 'link-dark rounded' %></li>
        </ul>
      </div>
    </li>
    <li class="border-top my-3"></li>
    <li class="mb-1">
      <%= link_to destroy_admin_session_path, method: :delete, class: "btn align-items-center rounded collapsed menu_btn_focus" do %>
        <svg class="bi me-2" width="16" height="16">
          <use xlink:href="#people-circle"/>
        </svg>
        Sign out
      <% end %>
    </li>
  </ul>
</div>