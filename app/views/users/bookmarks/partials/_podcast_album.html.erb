<div class="podcast d-flex justify-content-between align-items-center" >
    <div class="d-flex">
        <div>
            <% if podcast_album.image? %>
                <%= image_tag podcast_album.image_url, class: "image" %>
            <% else %>
                <%= image_tag "album_default.jpg", class: "image" %>
            <% end %>
        </div>
        <div class="ms-3 d-flex flex-column">
            <div><%=podcast_album.name%></div>
            <div>Public by: <%=podcast_album.user.user_name%></div>
            <div><%=podcast_album.created_at.strftime("%b %d, %Y")%></div>
        </div>
    </div>
    <div class="ms-5">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        </div>
    </div>
</div>